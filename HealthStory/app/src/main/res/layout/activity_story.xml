<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/teal_700"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_button_filters"
            android:backgroundTint="@color/teal_200"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:onClick="onFiltersButtonClicked"
            ></Button>

        <Button
            android:id="@+id/add_to_story_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:text="@string/toolbar_button_add_image"
            android:onClick="onAddButtonClicked"
            ></Button>

    </androidx.appcompat.widget.Toolbar>

    <ListView
        android:id="@+id/story_images_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></ListView>


</LinearLayout>