<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataPageActivity"
    android:layout_margin="30sp"
    >

    <TextView
        android:id="@+id/page_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:text="DATA page"
        android:textSize="10pt"
        ></TextView>

    <TextView
        android:id="@+id/first_name_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First name:"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/page_data"
        ></TextView>

    <TextView
        android:id="@+id/user_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/first_name_line"
        android:layout_alignBaseline="@id/first_name_line"
        android:layout_marginLeft="20dp"
        ></TextView>

    <TextView
        android:id="@+id/second_name_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second name:"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/first_name_line"
        ></TextView>

    <TextView
        android:id="@+id/user_second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/second_name_line"
        android:layout_alignBaseline="@id/second_name_line"
        android:layout_marginLeft="20dp"
        ></TextView>

    <TextView
        android:id="@+id/patronymic_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patronymic:"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/second_name_line"
        ></TextView>

    <TextView
        android:id="@+id/user_patronymic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/patronymic_line"
        android:layout_alignBaseline="@id/patronymic_line"
        android:layout_marginLeft="20dp"
        ></TextView>

    <TextView
        android:id="@+id/birthday_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthday:"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/patronymic_line"
        ></TextView>

    <TextView
        android:id="@+id/user_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/birthday_line"
        android:layout_alignBaseline="@id/birthday_line"
        android:layout_marginLeft="20dp"
        ></TextView>

    <TextView

        android:id="@+id/gender_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/birthday_line"
        ></TextView>

    <TextView
        android:id="@+id/user_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gender_line"
        android:layout_alignBaseline="@id/gender_line"
        android:layout_marginLeft="20dp"
        ></TextView>=

</RelativeLayout>